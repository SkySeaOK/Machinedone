<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="1dp"
    android:background="#F4F4F4">

    <LinearLayout
        android:id="@+id/red_urgency"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:layout_marginBottom="1dp"
        android:padding="5dp">

        <TextView
            android:layout_gravity="center"
            android:layout_width="10dp"
            android:background="#FF342E"
            android:layout_height="10dp"
            android:layout_marginRight="10dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="急"
            android:textColor="#000"
            android:layout_gravity="center"
            android:gravity="start"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/orange_higher"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:layout_marginBottom="1dp"
        android:padding="5dp">

        <TextView
            android:layout_gravity="center"
            android:layout_width="10dp"
            android:background="#FFAE25"
            android:layout_height="10dp"
            android:layout_marginRight="10dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="高"
            android:textColor="#000"
            android:layout_gravity="center"
            android:gravity="start"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/blue_medium"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:layout_marginBottom="1dp"
        android:padding="5dp">

        <TextView
            android:layout_gravity="center"
            android:layout_width="10dp"
            android:background="#27C1FF"
            android:layout_height="10dp"
            android:layout_marginRight="10dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="中"
            android:textColor="#000"
            android:layout_gravity="center"
            android:gravity="start"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/green_low"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:layout_marginBottom="1dp"
        android:padding="5dp">

        <TextView
            android:layout_gravity="center"
            android:layout_width="10dp"
            android:background="#91FF19"
            android:layout_height="10dp"
            android:layout_marginRight="10dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="低"
            android:textColor="#000"
            android:layout_gravity="center"
            android:gravity="start"/>

    </LinearLayout>


</LinearLayout>