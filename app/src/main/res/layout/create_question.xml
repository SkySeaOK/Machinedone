<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4F4F4"
    tools:context="com.example.develop.machinedone.main.CreateQuestionActivity">

    <include
        android:id="@+id/title_toolbar1"
        layout="@layout/title"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="15dp"
        android:background="#F4F4F4"
        android:layout_below="@+id/title_toolbar1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:padding="5dp"
            android:orientation="horizontal"
            android:layout_marginBottom="1dp">

            <TextView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_gravity="center"
                android:gravity="end"
                android:paddingRight="15dp"
                android:text="模块"
                android:textColor="#000"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_weight="3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:text="未选择"
                android:layout_gravity="center"
                android:gravity="start"
                />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@mipmap/ic_right"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:padding="5dp"
            android:orientation="horizontal"
            android:layout_marginBottom="1dp">

            <TextView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_gravity="center"
                android:gravity="end"
                android:paddingRight="15dp"
                android:text="处理人"
                android:textColor="#000"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_weight="3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:text="未选择"
                android:layout_gravity="center"
                android:gravity="start"
                />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@mipmap/ic_right"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/question_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:padding="5dp"
            android:orientation="horizontal"
            android:layout_marginBottom="1dp">

            <TextView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_gravity="center"
                android:gravity="end"
                android:paddingRight="15dp"
                android:text="问题类型"
                android:textColor="#000"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/question_color"
                android:layout_gravity="center"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginRight="5dp"/>

            <TextView
                android:id="@+id/question_typeText"
                android:layout_weight="3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:layout_gravity="center"
                android:gravity="start"
                />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@mipmap/ic_right"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/priority_level"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:padding="5dp"
            android:orientation="horizontal"
            android:layout_marginBottom="1dp">

            <TextView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_gravity="center"
                android:gravity="end"
                android:paddingRight="15dp"
                android:text="优先级"
                android:textColor="#000"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/level_color"
                android:layout_gravity="center"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginRight="5dp"/>

            <TextView
                android:id="@+id/priority_levelText"
                android:layout_weight="3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:layout_gravity="center"
                android:gravity="start"
                />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@mipmap/ic_right"/>
        </LinearLayout>

        <TextView
            android:id="@+id/project_name"
            android:text="@string/project_title"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:textColor="#000"
            android:padding="10dp" />

        <EditText
            android:id="@+id/edit_project"
            android:layout_marginBottom="1dp"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:maxLines="5"
            android:hint="@string/write_projectName"
            android:gravity="top|left"
            android:background="#fff"
            android:paddingLeft="10dp"/>

        <TextView
            android:id="@+id/project_describe"
            android:text="@string/project_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:textColor="#000"
            android:padding="10dp"/>

        <EditText
            android:id="@+id/edit_describe"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:hint="@string/write_projectDescribe"
            android:gravity="top|left"
            android:maxLines="5"
            android:background="#fff"
            android:paddingLeft="10dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#F4F4F4"/>

        <Button
            android:id="@+id/submit_btn"
            android:layout_gravity="end"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/create_project"
            android:background="#56B5D3"/>
    </LinearLayout>
</RelativeLayout>
